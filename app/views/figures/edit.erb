<h1>Edit a Figure:</h1>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br><br>

  <label>Edit Landmarks:</label><br>
   <% Landmark.all.each do |landmark| %>
   <label><%= landmark.name %></label>
   <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
   <% end %>
   <label>Add New:</label>
   <input type="text" id="new_landmark" name="landmark[name]">
   <br></br>


    <label>Edit Titles:</label>
    <% @titles.each do |title| %>
    <%= title.name %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>>
    <% end %>
    <br><br>
      <label> Add New:</label>
      <input type="text" name="title[name]" id="new_title">
      <br><br>

      <input type="submit" value="Edit Figure">
    </form>
